<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.net.mall.server.user.mapper.TicketMapper">

    <update id="updateStatus">
        update `net-mall`.ticket set status=#{status} ,use_time=now() where ticket_id=#{ticketId}
    </update>


    <select id="pageById" resultType="com.net.mall.pojo.vo.TicketVO">
        select * from `net-mall`.ticket where user_id=#{userId}
    </select>
    <select id="listById" resultType="com.net.mall.pojo.vo.TicketVO">
        select * from `net-mall`.ticket where user_id=#{userId}
    </select>
    <select id="getById" resultType="com.net.mall.pojo.entity.TicketEntity">
        select * from `net-mall`.ticket where ticket_id=#{ticketId}
    </select>
</mapper>