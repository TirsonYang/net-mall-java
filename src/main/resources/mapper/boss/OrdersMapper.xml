<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.net.mall.server.boss.mapper.OrdersMapper">

    <update id="updateStatus">
        update `net-mall`.orders set status=#{status} where id=#{id}
    </update>


    <select id="page" resultType="com.net.mall.pojo.vo.OrdersVO">
        select * from `net-mall`.orders
    </select>

    <select id="getListByStatus" resultType="com.net.mall.pojo.entity.OrdersEntity">
        select * from `net-mall`.orders where status=#{status}
    </select>
    <select id="list" resultType="com.net.mall.pojo.vo.OrdersVO">
        select * from `net-mall`.orders where order_time between #{startTime} and #{endTime}
    </select>
</mapper>