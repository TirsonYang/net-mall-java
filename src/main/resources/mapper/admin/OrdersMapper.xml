<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.net.mall.server.admin.mapper.OrdersMapper">

    <update id="finish">
        update `net-mall`.orders set status=3,delivery_time=#{now} where id=#{id}
    </update>


    <select id="page" resultType="com.net.mall.pojo.vo.OrdersVO">
        select * from `net-mall`.orders where status=2
    </select>
    <select id="list" resultType="com.net.mall.pojo.vo.OrdersVO">
        select * from `net-mall`.orders
        <where>
            <if test="userId!=null and userId!=''">
                and user_id=#{userId}
            </if>
            <if test="startTime!=null and startTime!=''">
                and checkout_time &gt;= #{startTime}
            </if>
            <if test="endTime!=null and endTime!=''">
                and checkout_time &lt;= #{endTime}
            </if>
        </where>
    </select>


</mapper>