<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.net.mall.server.admin.mapper.TicketMapper">


    <insert id="add">
        insert into `net-mall`.ticket (ticket_id,user_id, product_id, product_name, status, create_time, use_time, expire_time, order_id)
        values (#{ticketId},#{userId}, #{productId}, #{productName}, #{status}, #{createTime}, #{useTime}, #{expireTime}, #{orderId})
    </insert>
    <update id="updateStatus">
        update `net-mall`.ticket set status=#{status} where ticket_id=#{ticketId}
    </update>
    <select id="listById" resultType="com.net.mall.pojo.vo.TicketVO">
        select * from `net-mall`.ticket where user_id=#{userId}
    </select>

    <select id="pageById" resultType="com.net.mall.pojo.vo.TicketVO">
        select * from `net-mall`.ticket where user_id=#{userId}
    </select>
</mapper>